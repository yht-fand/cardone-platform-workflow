<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit.xsd">
    <bean name="com.rabbitmq.client.ConnectionFactory" class="com.rabbitmq.client.ConnectionFactory">
        <property name="automaticRecoveryEnabled" value="true"/>
        <property name="topologyRecoveryEnabled" value="true"/>
    </bean>

    <rabbit:connection-factory
            id="rabbitConnectionFactory"
            host="${spring.rabbitmq.host:127.0.0.1}"
            port="${spring.rabbitmq.port:5672}"
            username="${spring.rabbitmq.username:cardone}"
            password="${spring.rabbitmq.password:cardone.123}"
            virtual-host="${spring.rabbitmq.virtualHost:cardone}"
            channel-cache-size="${spring.rabbitmq.channel.cache.size:100}"
            connection-factory="com.rabbitmq.client.ConnectionFactory"
            publisher-confirms="true"
            executor="${spring.rabbitmq.executor:org.springframework.core.task.TaskExecutor}"/>

    <bean id="amqpMessageConverter" class="top.cardone.amqp.support.converter.RpcMessageConverter"/>

    <bean id="retryTemplate" class="org.springframework.retry.support.RetryTemplate">
        <property name="backOffPolicy">
            <bean class="org.springframework.retry.backoff.ExponentialBackOffPolicy">
                <property name="initialInterval" value="1000"/>
                <property name="multiplier" value="3"/>
                <property name="maxInterval" value="3000"/>
            </bean>
        </property>
        <property name="retryPolicy">
            <bean class="org.springframework.retry.policy.SimpleRetryPolicy">
                <property name="maxAttempts" value="1"/>
            </bean>
        </property>
    </bean>

    <bean name="rabbitTemplateParnet" class="org.springframework.amqp.rabbit.core.RabbitTemplate" abstract="true">
        <property name="connectionFactory" ref="rabbitConnectionFactory"/>
        <property name="messageConverter" ref="amqpMessageConverter"/>
        <property name="retryTemplate" ref="retryTemplate"/>
        <property name="replyTimeout" value="${spring.rabbitmq.replyTimeout:3000000}"/>
        <property name="receiveTimeout" value="${spring.rabbitmq.receiveTimeout:3000000}"/>
    </bean>

    <rabbit:template id="org.springframework.amqp.core.AmqpTemplate"
                     connection-factory="rabbitConnectionFactory"
                     message-converter="amqpMessageConverter"
                     retry-template="retryTemplate"
                     reply-timeout="${spring.rabbitmq.replyTimeout:3000000}"
                     receive-timeout="${spring.rabbitmq.receiveTimeout:3000000}"/>

    <rabbit:admin connection-factory="rabbitConnectionFactory"/>
</beans>