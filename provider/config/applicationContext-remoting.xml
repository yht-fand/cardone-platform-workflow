<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="exceptionParnet" class="org.springframework.jms.remoting.JmsInvokerServiceExporter" abstract="true">
    </bean>

    <bean name="messageListenerContainerParnet" class="org.springframework.jms.listener.DefaultMessageListenerContainer"
          abstract="true" lazy-init="false">
        <property name="connectionFactory" ref="advancedConnectionFactory"/>
        <!-- 初始2个Consumer, 可动态扩展到10 -->
        <property name="concurrentConsumers" value="2"/>
        <property name="maxConcurrentConsumers" value="10"/>
    </bean>
</beans>